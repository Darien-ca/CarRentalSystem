@model List<DealViewModel>

<div class="container mt-5">
    <h2 class="mb-4">Special Deals</h2>
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="@car.ImageUrl" class="card-img-top" alt="@car.Model" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@car.Brand @car.Model</h5>
                        <p class="card-text">Price per day: $@car.PricePerDay</p>
                        <p class="card-text">Enjoy exclusive offers on this car. Book now!</p>
                        <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.CarId" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
