@model CarRentalSystem.Models.Car

<div class="container">
    <h2>Delete Car</h2>
    <p>Are you sure you want to delete this car?</p>

    <div>
        <h4>@Model.Brand @Model.Model</h4>
        <dl class="row">
            <dt class="col-sm-2">Year</dt>
            <dd class="col-sm-10">@Model.Year</dd>

            <dt class="col-sm-2">Price Per Day</dt>
            <dd class="col-sm-10">$@Model.PricePerDay</dd>

            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Url.Content("~/" + Model.ImageUrl)" alt="@Model.Brand" style="max-width: 200px; max-height: 150px;" />
                }
                else
                {
                    <p>No image available</p>
                }
            </dd>
        </dl>
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.CarId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a asp-action="ManageCars" class="btn btn-secondary">Cancel</a>

      

    </div>
</div>
