@model CarRentalSystem.Models.Car

<h1>Edit Car Details</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <!-- Brand -->
    <div class="form-group">
        <label asp-for="Brand" class="control-label"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <!-- Model -->
    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <!-- Year -->
    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" type="number" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <!-- Price Per Day -->
    <div class="form-group">
        <label asp-for="PricePerDay" class="control-label"></label>
        <input asp-for="PricePerDay" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>

    <!-- Availability -->
    <div class="form-group form-check">
        <input asp-for="Availability" class="form-check-input" type="checkbox" />
        <label asp-for="Availability" class="form-check-label">Available</label>
        <span asp-validation-for="Availability" class="text-danger"></span>
    </div>

    <!-- Current Image -->
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="form-group">
            <label>Current Image</label>
            <div>
                <img src="@Model.ImageUrl" alt="Car Image" width="200" class="img-thumbnail" />
            </div>
        </div>
    }

    <!-- Image Upload -->
    <div class="form-group">
        <label asp-for="ImageUrl" class="control-label">Update Image</label>
        <input type="file" asp-for="ImageUrl" class="form-control-file" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="ManageCars" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
